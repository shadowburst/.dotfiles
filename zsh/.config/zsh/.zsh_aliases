#!/usr/bin/env zsh

alias grep="grep --color=always"

alias ls='ls --color=always'
alias ll='ls -ahl --color=always'

# Confirm dangerous actions
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

# Create directories recursively
alias mkdir='mkdir -p'

# Emacs
alias emacsclient='emacsclient -c -a "emacs"'
alias emacsterm='emacs -nw'
