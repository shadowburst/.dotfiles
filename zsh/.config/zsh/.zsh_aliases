alias grep="grep --color=always"

alias ls='exa -F --group-directories-first --colour=always --icons'
alias ll='exa -alF --extended --group-directories-first --colour=always --icons'

alias ssh="kitty +kitten ssh"

# Confirm dangerous actions
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'
alias mkdir='mkdir -p'

# Test awesome config
alias awesome-test="Xephyr -ac -nolisten tcp -br -noreset -screen 1280x800 :1 &; sleep 1; DISPLAY=:1.0 awesome"
