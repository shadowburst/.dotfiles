{
  "debug.allowBreakpointsEverywhere": true,

  "diffEditor.codeLens": true,

  "editor.bracketPairColorization.enabled": true,
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.dragAndDrop": false,
  "editor.foldingImportsByDefault": true,
  "editor.fontFamily": "'FiraCode Nerd Font Mono', 'feather', 'Noto sans'",
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.mouseWheelZoom": true,
  "editor.smoothScrolling": true,
  "editor.suggest.insertMode": "replace",
  "editor.suggestSelection": "first",
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 120,
  "editor.wrappingIndent": "indent",

  "emmet.showSuggestionsAsSnippets": true,

  "explorer.openEditors.visible": 0,

  "extensions.ignoreRecommendations": true,

  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "files.trimTrailingWhitespace": true,

  "git.autofetch": true,
  "git.enableSmartCommit": true,

  "security.workspace.trust.enabled": false,
  "security.workspace.trust.untrustedFiles": "open",

  "telemetry.telemetryLevel": "off",

  "terminal.external.linuxExec": "/usr/bin/kitty",
  "terminal.integrated.defaultProfile.linux": "zsh",

  "window.menuBarVisibility": "toggle",
  "workbench.colorTheme": "Dracula",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.list.smoothScrolling": true,
  "workbench.startupEditor": "newUntitledFile",

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  // Languages
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "python.formatting.provider": "black",
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },

  // Extensions
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.defaultTimeFormat": "hh:mm",
  "gitlens.defaultDateFormat": "MMMM DD, YYYY hh:mm",

  "Lua.telemetry.enable": false,

  "oneDarkPro.italic": false,

  "prettier.jsxSingleQuote": true,
  "prettier.singleQuote": true,

  "typescript.updateImportsOnFileMove.enabled": "always",

  // Vim settings
  "vim.easymotion": true,
  "vim.foldfix": true,
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-b>": false,
    "<C-c>": false,
    "<C-f>": false,
    "<C-r>": false,
    "<C-o>": false,
    "<C-w>": false,
    "<C-x>": false,
    "<C-y>": false,
    "<C-z>": false
  },
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "#ffffff22",
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.leader": "<space>",
  "vim.surround": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.whichwrap": "b,s,h,l",

  // Status bar colours
  "vim.statusBarColorControl": true,
  "vim.statusBarColors.normal": ["#BD93F9", "#282A36"],
  "vim.statusBarColors.insert": ["#50FA7B", "#282A36"],
  "vim.statusBarColors.visual": ["#F1FA8C", "#282A36"],
  "vim.statusBarColors.visualline": ["#F1FA8C", "#282A36"],
  "vim.statusBarColors.visualblock": ["#F1FA8C", "#282A36"],
  "vim.statusBarColors.replace": ["#BD93F9", "#282A36"],
  "vim.statusBarColors.commandlineinprogress": ["#FF79C6", "#282A36"],
  "vim.statusBarColors.searchinprogressmode": ["#BD93F9", "#282A36"],
  "vim.statusBarColors.easymotionmode": ["#BD93F9", "#282A36"],
  "vim.statusBarColors.easymotioninputmode": ["#BD93F9", "#282A36"],
  "vim.statusBarColors.surroundinputmode": ["#BD93F9", "#282A36"],
  "workbench.colorCustomizations": {
    "statusBar.background": "#BD93F9",
    "statusBar.noFolderBackground": "#BD93F9",
    "statusBar.debuggingBackground": "#BD93F9",
    "statusBar.foreground": "#282A36",
    "statusBar.debuggingForeground": "#282A36"
  },

  // Keykindings
  "vim.normalModeKeyBindings": [
    {
      "before": ["s"],
      "after": ["<leader>", "<leader>", "s"]
    },
    {
      "before": ["<S-s>"],
      "after": ["<leader>", "<leader>", "<leader>", "b", "d", "j", "k"]
    },
    {
      "before": ["<C-h>"],
      "after": ["<C-w>", "h"]
    },
    {
      "before": ["<C-j>"],
      "after": ["<C-w>", "j"]
    },
    {
      "before": ["<C-k>"],
      "after": ["<C-w>", "k"]
    },
    {
      "before": ["<C-l>"],
      "after": ["<C-w>", "l"]
    },
    {
      "before": ["<S-h>"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["<S-l>"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<leader>", "c"],
      "commands": [":q"]
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "f", "r"],
      "commands": ["workbench.action.openRecent"]
    },
    {
      "before": ["<C-Space>"],
      "after": ["editor.action.triggerSuggest"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["k", "j"],
      "after": ["<Esc>"]
    },
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    }
  ]
}
