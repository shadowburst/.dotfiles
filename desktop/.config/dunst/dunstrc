# See dunst(5) for all configuration options

[global]
    ### General ###
    monitor = 0
    follow = mouse
    width = 400
    height = 500
    origin = top-right
    offset = 8x48
    scale = 0
    notification_limit = 10

    ### Progress bar ###
    progress_bar = true
    progress_bar_height = 10
    progress_bar_frame_width = 0
    progress_bar_min_width = 150
    progress_bar_max_width = 400
    highlight = "#935FB0"

    ### Notifications ###
    transparency = 0
    separator_height = 4
    separator_color = frame
    gap_size = 0
    corner_radius = 13
    frame_width = 3
    frame_color = "#202328"
    padding = 8
    horizontal_padding = 8
    sort = yes

    ### Display ###
    indicate_hidden = yes
    font = Noto sans 11
    line_height = 0
    markup = full
    format = "<span font="Noto sans 14"><b>%s</b></span>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    ellipsize = end
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###
    text_icon_padding = 10
    icon_position = left
    min_icon_size = 32
    max_icon_size = 32
    icon_theme = "Tela-purple-dark"
    enable_recursive_icon_lookup = true

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###
    dmenu = tofi
    browser = xdg-open
    always_run_script = true
    title = Dunst
    class = Dunst
    ignore_dbusclose = false

    ### Wayland ###
    layer = overlay
    force_xwayland = false

    ### Actions ###
    mouse_left_click = do_action, open_url, close_current
    mouse_middle_click = close_all
    mouse_right_click = context

[urgency_low]
