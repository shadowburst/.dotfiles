#!/usr/bin/env bash

case $1 in
    "bluetooth")
        blueman-manager
        ;;
    "launcher")
        $HOME/.config/rofi/scripts/app-menu.sh
        ;;
    "network")
        $TERMINAL -e nmtui
        ;;
    "torrents")
        $TERMINAL -e tremc
        ;;
    "updates")
        $TERMINAL -e bash -c "paru -Syu; echo Done - Press enter to exit...; read _"
        ;;
    "volume")
        pavucontrol
        ;;
    "workspace")
        $HOME/.config/hypr/scripts/workspace.sh $2
        ;;
esac
