#!/usr/bin/env bash

TERMINAL=alacritty

case $1 in
    "bluetooth")
        blueman-manager
        ;;
    "launcher")
        $HOME/.config/rofi/scripts/app-menu.sh
        ;;
    "network")
        $TERMINAL -e nmtui
        ;;
    "torrents")
        $TERMINAL -e tremc
        ;;
    "tray")
        if pkill trayer; then
            eww update bar-tray-open=false
        else
            eww update bar-tray-open=true

            trayer --edge top --align right --distance 36 --heighttype request --padding 6 --tint 0xFF1C1F24 --transparent true --alpha 0 --monitor 0
        fi
        ;;
    "updates")
        $TERMINAL -e bash -c "paru -Syu; echo Done - Press enter to exit...; read _"
        ;;
    "volume")
        pavucontrol
        ;;
esac
