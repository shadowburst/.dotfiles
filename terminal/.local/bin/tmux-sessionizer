#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
	selected=$1
else
	directories=(~ ~/Repos)
	selected=$(
		find "${directories[@]}" \
			-mindepth 1 -maxdepth 1 \
			-type d -exec test -e '{}/.git' \; \
			-print |
			fzf \
				--prompt=" " \
				--pointer="" \
				--header='' --no-info --margin='1,2' \
				--layout=reverse \
				--color="16,gutter:-1,bg:-1,bg+:-1,fg+:4,hl:1,hl+:1" \
				--preview="tree -a -L 1 -C --dirsfirst --sort=name --noreport {} | head -200" \
				--bind="ctrl-d:preview-page-down,ctrl-u:preview-page-up,ctrl-y:accept"
	)
fi

if [[ -z $selected ]]; then
	exit 0
fi

selected_name=$(basename "$selected" | tr . _)

if ! tmux has-session -t="$selected_name" 2>/dev/null; then
	tmux new-session -ds "$selected_name" -c "$selected" "${EDITOR:-nvim}; ${SHELL:-bash}"
fi

if [[ -n $TMUX ]]; then
	tmux switch-client -t "$selected_name"
else
	tmux attach -t "$selected_name"
fi
